@model List<CarSharingApp.Application.Contracts.Account.AccountVehicleData>

@{
    CarSharingApp.Models.ApplicationData.Pager pager = new CarSharingApp.Models.ApplicationData.Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

