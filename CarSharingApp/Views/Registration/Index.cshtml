@using CarSharingApp.Models.ClientData
@model ClientRegistrationViewModel

<div class="container">
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/Images/RegistrationPage/samSolutionsLogo.png" alt="" width="72" height="72">
        <h2>Registration form</h2>
        <p class="lead">Please, provide us with real information only. The presence of incorrectly filled fields can lead to disastrous consequences in the future. Take the form as seriously as possible.</p>
    </div>

    <div class="row">
        <div class="d-flex order-md-1 justify-content-center align-content-center">
            <form asp-controller="Registration" asp-action="SaveNewAuthorizedUser" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>First name</label>
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="Rayan" onfocus="HideErrorSpan('FirstNameError')">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Last name</label>
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Amari" onfocus="HideErrorSpan('LastNameError')">
                    </div>
                </div>
                <div class="row">
                    <span asp-validation-for="FirstName" id="FirstNameError" class="text-danger text-center"></span>
                    <span asp-validation-for="LastName" id="LastNameError" class="text-danger text-center"></span>
                </div>

                <div class="mb-3">
                    <label>Username</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@@</span>
                        </div>
                        <input asp-for="Username" type="text" class="form-control" placeholder="Username" onfocus="HideErrorSpan('UsernameError')">
                    </div>
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Username" id="UsernameError" class="text-danger text-center"></span>
                </div>

                <div class="row">
                    <div class="col-md-5 mb-3">
                        <label for="country">Country</label>
                        <select asp-for="Country" class="custom-select d-block w-100" onfocus="HideErrorSpan('CountryError')">
                            <option value="0">Choose...</option>
                            <option value="1">Belarus</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>City</label>
                        <select asp-for="City" class="custom-select d-block w-100" onfocus="HideErrorSpan('BelarusCityError')">
                            <option value="0">Choose...</option>
                            <option value="1">Minsk</option>
                            <option value="2">Grodno</option>
                            <option value="3">Vitebsk</option>
                            <option value="4">Mogilev</option>
                            <option value="5">Gomel</option>
                            <option value="6">Brest</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label>Postcode</label>
                        <input asp-for="Postcode" type="number" class="form-control" onfocus="HideErrorSpan('PostcodeError')">
                    </div>
                </div>
                <div class="row">
                    <span asp-validation-for="Country" id="CountryError" class="text-danger text-center"></span>
                    <span asp-validation-for="City" id="BelarusCityError" class="text-danger text-center"></span>
                    <span asp-validation-for="Postcode" id="PostcodeError" class="text-danger text-center"></span>
                </div>

                <div class="mb-3">
                    <label>Address</label>
                    <input asp-for="Address" type="text" class="form-control" placeholder="L.Bedy street, 29-97" onfocus="HideErrorSpan('AddressError')">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Address" id="AddressError" class="text-danger text-center"></span>
                </div>

                <div class="mb-3">
                    <label>Phone number</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="+375331234567" onfocus="HideErrorSpan('PhoneNumberError')">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="PhoneNumber" id="PhoneNumberError" class="text-danger text-center"></span>
                </div>

                <div class="mb-3">
                    <label>Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="yourEmail@example.com" onfocus="HideErrorSpan('EmailError')">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Email" id="EmailError" class="text-danger text-center"></span>
                </div>

                <div class="mb-3">
                    <label>Password</label>
                    <input asp-for="Password" type="password" class="form-control" onfocus="HideErrorSpan('PasswordError')">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Password" id="PasswordError" class="text-danger text-center"></span>
                </div>

                <div class="mb-3">
                    <label>Repeat password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" onfocus="HideErrorSpan('ConfirmPasswordError')">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="ConfirmPassword" id="ConfirmPasswordError" class="text-danger text-center"></span>
                </div>

                <div class="mb-3">
                    <label>Series and Number of the driver's license</label>
                    <input asp-for="DriverLicenseNumber" type="text" class="form-control" placeholder="5AA000031" onfocus="HideErrorSpan('DriverLicenseNumberError')">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="DriverLicenseNumber" id="DriverLicenseNumberError" class="text-danger text-center"></span>
                </div>

                <hr class="mb-4">

                <div class="custom-control custom-checkbox">
                    <input asp-for="Is18YearsOld" type="checkbox" class="custom-control-input" id="Is18YearsOldCheckBox" onfocus="HideErrorSpan('AcceptingTermsError')">
                    <label class="custom-control-label" for="Is18YearsOldCheckBox">I am 18+ years old and I agree to the Terms of Service.</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input asp-for="IsAcceptedNewsSharing" type="checkbox" class="custom-control-input" id="IsAcceptedNewsSharingCheckBox" onfocus="HideErrorSpan('NewsSharingError')">
                    <label class="custom-control-label" for="IsAcceptedNewsSharingCheckBox">Send me Sam Car Sharing news.</label>
                </div>

                <div class="mt-3">
                    <span asp-validation-for="Is18YearsOld" id="AcceptingTermsError" class="text-danger text-center"></span>
                    <span asp-validation-for="IsAcceptedNewsSharing" id="NewsSharingError" class="text-danger text-center"></span>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Create new account</button>
            </form>
        </div>
    </div>

</div>



<!--Script for hiding error message starts here-->
<script>
    function HideErrorSpan(componentId) {
        var component = document.getElementById(componentId);
        component.textContent = "";
    }
</script>
<!--Script for hiding error message ends here-->