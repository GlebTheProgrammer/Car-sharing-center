<!--Script for showing the alert when user click on logout button starts here-->
<script>
    function ShowLogoutConfirmationAlert()
    {
        Swal.fire({
            title: 'Are you sure?',
            text: "You will need to Sign In again!",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#4FA64F',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes'
        }).then((result) => {
            if (result.isConfirmed) {

                $.ajax({
                    url: "/SignIn/Logout",
                    method: "POST"
                });
           
                window.location.reload(true);
            }
        });
    }
</script>
<!--Script for showing the alert when user click on logout button ends here-->

<!--Script for showing the alert when user logged in starts here-->
<script>
    window.addEventListener("DOMContentLoaded", () => {

        if ("@currentUserStatusProvider.HasUserSignedIn()" === "True" ) {

            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });

            Toast.fire({
                icon: 'success',
                title: 'Signed in successfully'
            });

            @{currentUserStatusProvider.ChangeSignedInState(false);}
        }
    });
</script>
<!--Script for showing the alert when user logged in ends here-->

<!--Script for showing the alert when user logged out starts here-->
