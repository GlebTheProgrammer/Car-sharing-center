@using CarSharingApp.Services.Interfaces
@inject ICurrentUserStatusProvider currentUserStatusProvider

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarSharingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarSharingApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />

    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />





</head>
<body style="background-color: rgb(246, 246, 246)">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item mr-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">About Us</a>
                        </li>
                        <li class="nav-item mr-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="CarSharing" asp-action="Index">Catalog and Pricing</a>
                        </li>
                        @if (currentUserStatusProvider.GetUserRole() == CarSharingApp.Services.Includes.UserRole.Client)
                        {
                            <li class="nav-item">
                                <a id="ShareYourCarBtn" class="nav-link text-white" asp-area="" asp-controller="ShareYourCar" asp-action="Index">Share your car</a>
                            </li>
                        }
                    </ul>

                    @if(currentUserStatusProvider.GetUserRole() == CarSharingApp.Services.Includes.UserRole.Client)
                    {
                        <button id="LogoutBtn" class="btn btn-outline-warning my-2 my-sm-0 mr-3" onclick="ShowLogoutConfirmationAlert()">Logout</button>
                        <button id="UserAccountBtn" type="button" class="btn btn-outline-info" onclick="location.href='@Url.Action("Index", "UserPersonalAccount")'"><i class="far fa-user pr-2"></i>My Account</button>
                    }
                    else
                    {
                        <button id="SignInBtn" class="btn btn-outline-secondary my-2 my-sm-0 mr-3" onclick="location.href='@Url.Action("Index","SignIn")'">Sign in</button>
                        <button id="RegisterBtn" class="btn btn-outline-success my-2 my-sm-0" onclick="location.href='@Url.Action("Index","Registration")'">Join</button>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5 pt-5">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-white" style="background-color: #f1f1f1;">
        <!-- Grid container -->
        <div class="container pt-4">
            <!-- Section: Social media -->
            <section class="mb-4">
                <!-- Facebook -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1"
                   href="https://www.facebook.com/gleb.sukristik"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-facebook-f"></i>
                </a>

                <!-- Twitter -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1"
                   href="https://twitter.com/Glebyyyyyshka"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-twitter"></i>
                </a>

                <!-- Google -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1"
                   href="https://gleb15a@gmail.com"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-google"></i>
                </a>

                <!-- Instagram -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1"
                   href="https://Sorry/But/I/Dont/Have/Instagram"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-instagram"></i>
                </a>

                <!-- Linkedin -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1"
                   href="https://www.linkedin.com/in/glebyshka/"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-linkedin"></i>
                </a>
                <!-- Github -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1"
                   href="https://github.com/GlebTheProgrammer"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-github"></i>
                </a>
            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center text-dark p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2022 Made By:
            <a class="text-dark" href="https://www.linkedin.com/in/glebyshka/">Gleb Sukristik</a>
        </div>
        <!-- Copyright -->
    </footer>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://kit.fontawesome.com/81f3a44f30.js" crossorigin="anonymous"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<script>
    window.addEventListener("DOMContentLoaded", () => {

        // User logged in
        if ("@currentUserStatusProvider.HasUserSignedIn()" === "True" ) {

            ShowSuccessfulMessageAfterLogIn();

            @{currentUserStatusProvider.ChangeSignedInState(false);}

            return;
        }

        // User logged out
        if ("@currentUserStatusProvider.HasUserLoggedOut()" === "True") {

            ShowSuccessfulMessageAfterLogout();

            @{currentUserStatusProvider.ChangeLoggedOutState(false);}

            return;
        }

        // User shared new car
        if ("@currentUserStatusProvider.HasSharedNewVehicle()" === "True") {

            ShowSuccessfulCarSharingMessage();

            @{currentUserStatusProvider.ChangeSharedNewVehicleState(false);}

            return;
        }
        
        // User changed account data
        if ("@currentUserStatusProvider.HasChangedAccountData()" === "True") {

            ShowSuccessfulMessageAfterUserHasChangedAccountData();

            @{currentUserStatusProvider.ChangeAccountDataHasChangedState(false);}

            return;
        }

        // User changed vehicle data
        if ("@currentUserStatusProvider.HasChangedVehicleData()" === "True") {

            ShowSuccessfulMessageAfterUserHasChangedVehicleData();  

            @{currentUserStatusProvider.ChangeVehicleDataHasChangedState(false);}

            return;
        }

        // User changed password
        if ("@currentUserStatusProvider.HasChangedPasswordData()" === "True") {

            ShowSuccessfulMessageAfterUserHasChangedPassword();

            @{currentUserStatusProvider.ChangePasswordDataHasChangedState(false);}

            return;
        }

        // Unauthorized access attempt
        if ("@currentUserStatusProvider.HasTriedToGetUnauthorizedAccess()" === "True") {

            @{currentUserStatusProvider.ChangeUnauthorizedAccessState(false);}

            ShowUnauthorizedAccessAttemptMessage();

            return;
        }

        // Cancelled payment process
        if ("@currentUserStatusProvider.HasCanceledPaymentProcess()" === "True") {

            @{currentUserStatusProvider.ChangeCanceledPaymentProcessState(false);}

            ShowPurchaseCancelledMessage();

            return;
        }

        // Cancelled payment process
        if ("@currentUserStatusProvider.HasCompletedPaymentProcess()" === "True") {

            @{currentUserStatusProvider.ChangeCompletedPaymentProcessState(false);}

            ShowPurchaseCompletedMessage();

            return;
        }

        // Finished order from account page
        if("@currentUserStatusProvider.HasFinishedActiveOrder()" === "True") {

            @{currentUserStatusProvider.ChangeFinishedActiveOrderState(false);}

            ShowSuccessfulOrderFinishedMessage();

            return;
        }

    });
</script>


