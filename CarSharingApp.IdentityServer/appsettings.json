{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Warning"
      }
    }
  },

  "AllowedHosts": "*",

  "MongoDbConfig": {
    "DbName": "CarSharing",
    "Collections": {
      "AdminsCollectionName": "Admins",
      "CustomersCollectionName": "Customers"
    }
  },

  "ConnectionStrings": {
    "MongoDbLocal": "mongodb://127.0.0.1:27017"
  }
}